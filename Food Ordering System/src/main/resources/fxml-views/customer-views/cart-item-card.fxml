<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="cartCardRoot" alignment="CENTER" maxWidth="1.7976931348623157E308" minHeight="92.0" prefHeight="125.0"
      prefWidth="340.0" spacing="10"
      style="           -fx-padding: 10;           -fx-background-color: white;           -fx-background-radius: 10;           -fx-border-radius: 10;           -fx-border-color: #e0e0e0;           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);       "
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pattern.food_ordering_system.controller.customer.CartCardController">

    <children>

        <!-- Image -->
        <VBox alignment="CENTER" fillWidth="false" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="100.0"
              prefWidth="125.0">
            <children>
                <ImageView fx:id="foodImageView" fitHeight="90" fitWidth="120.0" preserveRatio="true"
                           style="-fx-background-radius: 8;"/>
            </children>
        </VBox>

        <!-- Content -->
        <VBox prefHeight="95.0" prefWidth="301.0" spacing="6.0">

            <!-- Title + remove -->
            <HBox alignment="CENTER_LEFT" prefHeight="12.0" prefWidth="188.0" spacing="6">
                <children>
                    <Label fx:id="foodNameLabel" prefHeight="20.0" prefWidth="140.0"
                           style="-fx-font-size: 14; -fx-font-weight: bold;" text="Burger"/>

                    <Button fx:id="removeButton" alignment="CENTER_RIGHT" onAction="#removeCartItem" prefHeight="37.0"
                            prefWidth="38.0"
                            style="-fx-background-color: transparent; -fx-text-fill: #e53935; -fx-font-size: 16; -fx-cursor: hand;"
                            text="❌"/>
                </children>
            </HBox>


            <Label fx:id="availabilityLabel"/>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Quantity + price -->
            <HBox fx:id="quantityBox" alignment="CENTER_LEFT" spacing="8">
                <children>
                    <Button fx:id="plusButton" onAction="#decreaseQuantity" prefHeight="18.0" prefWidth="28.0"
                            style="-fx-cursor: hand; -fx-background-color: #1E88E5; -fx-text-fill: white; -fx-border-radius: 50; -fx-background-radius: 50;"
                            text="➖"/>

                    <Label fx:id="quantityLabel" style="-fx-font-size: 16;" text="3"/>
                    <Button fx:id="minusButton" layoutX="10.0" layoutY="10.0" onAction="#increaseQuantity"
                            prefHeight="18.0" prefWidth="28.0"
                            style="-fx-cursor: hand; -fx-background-color: #1E88E5; -fx-text-fill: white; -fx-border-radius: 50; -fx-background-radius: 50;"
                            text="➕"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label fx:id="price"
                           style="                                -fx-font-size: 14;                                -fx-text-fill: #1E88E5;                                -fx-font-weight: bold;                            "
                           text="150 EGP"/>
                </children>
            </HBox>
            <padding>
                <Insets bottom="5.0"/>
            </padding>

        </VBox>
    </children>
</HBox>
