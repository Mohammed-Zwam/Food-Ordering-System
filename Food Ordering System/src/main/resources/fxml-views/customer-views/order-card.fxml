<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="270.0" prefWidth="929.0" spacing="10"
      style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 5, 0, 0, 2); -fx-padding: 15;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pattern.food_ordering_system.controller.customer.OrderCardController">
    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
        <children>
            <VBox fx:id="ORDER_PLACED" alignment="CENTER" prefHeight="73.0" prefWidth="105.0" spacing="5.0">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../assets/order%20stages/%5B1%5D%20oreder%20placed.png"/>
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" style="-fx-text-fill: black; -fx-font-weight: bold;" text="Order Placed"/>
                </children>
            </VBox>
            <Separator prefWidth="100.0" HBox.hgrow="ALWAYS"/>
            <VBox fx:id="CONFIRMED" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="73.0" prefWidth="94.0"
                  spacing="5.0">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../assets/order%20stages/%5B2%5D%20confirmed.png"/>
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" style="-fx-text-fill: black; -fx-font-weight: bold;" text="Confirmed"/>
                </children>
            </VBox>
            <Separator layoutX="351.0" layoutY="45.0" prefWidth="100.0" HBox.hgrow="ALWAYS"/>
            <VBox fx:id="BEING_PREPARED" alignment="CENTER" layoutX="538.0" layoutY="10.0" prefHeight="73.0"
                  prefWidth="105.0" spacing="5.0">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../assets/order%20stages/%5B3%5D%20being%20prepared.png"/>
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" prefHeight="18.0" prefWidth="96.0"
                           style="-fx-text-fill: black; -fx-font-weight: bold;" text="Being Prepared"/>
                </children>
            </VBox>
            <Separator prefWidth="100.0" HBox.hgrow="ALWAYS"/>
            <VBox fx:id="OUT_FOR_DELIVERY" alignment="CENTER" layoutX="521.0" layoutY="10.0" prefHeight="73.0"
                  prefWidth="114.0" spacing="5.0">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../assets/order%20stages/%5B4%5D%20out%20for%20delivery.png"/>
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" prefHeight="18.0" prefWidth="96.0"
                           style="-fx-text-fill: black; -fx-font-weight: bold;" text="Out For Delivery"/>
                </children>
            </VBox>
            <Separator layoutX="611.0" layoutY="45.0" prefWidth="100.0" HBox.hgrow="ALWAYS"/>
            <VBox fx:id="DELIVERED" alignment="CENTER" layoutX="631.0" layoutY="10.0" prefHeight="73.0"
                  prefWidth="101.0" spacing="5.0">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../assets/order%20stages/%5B5%5D%20delivered.png"/>
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" prefHeight="18.0" prefWidth="96.0"
                           style="-fx-font-weight: bold; -fx-text-fill: black;" text="Delivered"/>
                </children>
            </VBox>
        </children>
    </HBox>

    <Separator style="-fx-background-color: #F4F8FF;"/>

    <HBox alignment="CENTER" spacing="15">
        <VBox prefHeight="108.0" prefWidth="102.0" style="-fx-border-radius: 8; -fx-padding: 2;">
            <ImageView fx:id="imgRestaurant" fitHeight="87.0" fitWidth="136.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../assets/user-icon-SYS.png"/>
                </image>
            </ImageView>
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="3">
            <Label fx:id="lblRestaurantName" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #0D1B2A;"
                   text="Koshary Sayed Hanafy"/>
            <Label fx:id="lblDate" alignment="CENTER_RIGHT" style="-fx-text-fill: #778DA9; -fx-font-size: 14;"
                   text="Dec 04 â€¢ 11:47am"/>
            <Label fx:id="lblItemsCount" style="-fx-text-fill: #415A77; -fx-font-size: 14;" text="2 items"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 0 0 0;">
        <VBox>
            <Label style="-fx-font-size: 10; -fx-text-fill: #778DA9;" text="Total Amount"/>
            <Label fx:id="lblTotal" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #0D1B2A;"
                   text="EGP 103.98"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="rateBtn" layoutX="800.0" layoutY="20.0" onAction="#onRate"
                style="-fx-background-color: white; -fx-border-color: #1E88E5; -fx-border-radius: 20; -fx-background-radius: 20; -fx-text-fill: #1E88E5; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 20;"
                text="Rate your order"/>
    </HBox>

</VBox>
