<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pattern.food_ordering_system.controller.restaurant.EditItemController">

    <Label style="-fx-font-family: 'Pacifico'; -fx-font-size: 24px; -fx-text-fill: #1E88E5;" text="Edit Item" />

    <TextField fx:id="name" promptText="Food Name" style="-fx-background-radius: 5; -fx-border-color: #ccc;" />

    <ComboBox fx:id="cmbCategory" maxWidth="Infinity" promptText="Category" style="-fx-background-radius: 5; -fx-background-color: white; -fx-border-color: #ccc;" />

    <TextField fx:id="price" promptText="Price (EGP)" style="-fx-background-radius: 5; -fx-border-color: #ccc;" />

    <TextArea fx:id="description" prefHeight="80.0" promptText="Description" style="-fx-background-radius: 5; -fx-border-color: #ccc;" wrapText="true" />


    <CheckBox fx:id="chkAvailable" prefHeight="20.0" prefWidth="479.0" style="-fx-font-size: 14px;" text="Available" VBox.vgrow="ALWAYS" />

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Image URL" />

        <TextField fx:id="imgUrl" promptText="Paste image link here (http://...)" style="-fx-background-radius: 5; -fx-border-color: #ccc;" />

        <ImageView fx:id="imgPreview" fitHeight="100.0" fitWidth="150.0" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);" />
    </VBox>

    <Button maxWidth="Infinity" onAction="#saveChanges" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 20;" text="Update Item" />

</VBox>
