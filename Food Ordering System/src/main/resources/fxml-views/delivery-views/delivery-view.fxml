<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #F4F8FF;" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pattern.food_ordering_system.controller.delivery.DeliveryController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20"
              style="-fx-background-color: #FFFFFF; -fx-border-color: #D0D8E8; -fx-border-width: 0 0 1 0; -fx-padding: 5 20;">

            <Label style="-fx-font-family: 'Pacifico'; -fx-font-size: 28px; -fx-text-fill: #1E88E5;"
                   text="Delivery Dashboard"/>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox alignment="CENTER" prefHeight="67.0" spacing="10.0">
                <children>
                    <HBox alignment="CENTER" spacing="10.0"
                          style="-fx-background-radius: 50; -fx-background-color: #E9EEF6; -fx-padding: 5 15;">
                        <children>
                            <ImageView fx:id="profileImage" fitHeight="50.0" fitWidth="50.0" preserveRatio="true">
                                <image>
                                    <Image url="@../../assets/user-icon-SYS.png"/>
                                </image>
                            </ImageView>

                            <VBox alignment="CENTER_LEFT">
                                <children>
                                    <Label fx:id="lblWelcome"
                                           style="-fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-text-fill: #415A77; -fx-font-weight: bold;"
                                           text="Captain Name"/>
                                    <Label style="-fx-font-family: 'Poppins'; -fx-font-size: 12px; -fx-text-fill: #777; -fx-font-weight: bold;"
                                           text="Active Driver ðŸŸ¢"/>
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                </children>
            </HBox>
        </HBox>
    </top>

    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <VBox spacing="10" HBox.hgrow="ALWAYS">

                <HBox alignment="CENTER_LEFT" prefHeight="60.0">
                    <children>
                        <Label style="-fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: #0D1B2A;"
                               text="Assigned Shipments"/>
                        <Region HBox.hgrow="ALWAYS"/>

                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button onAction="#refreshOrders" fx:id="refreshBtn"
                                        style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand; -fx-font-size: 14; -fx-padding: 8 20;"
                                        text="ðŸ”„ Refresh"/>
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <Separator/>

                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="categoriesContainer" alignment="TOP_CENTER" spacing="15.0" style="-fx-padding: 5;"/>
                    </content>
                </ScrollPane>
            </VBox>
        </HBox>
    </center>

    <left>
        <VBox prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #D0D8E8; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
            <VBox spacing="5.0" style="-fx-padding: 20 0;" VBox.vgrow="ALWAYS">

                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" prefHeight="44.0"
                        style="-fx-background-color: #E3F2FD; -fx-text-fill: #1E88E5; -fx-font-weight: bold; -fx-font-size: 14; -fx-border-color: #1E88E5; -fx-border-width: 0 0 0 4; -fx-padding: 12 20;"
                        text="Available Orders"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>
            <Separator/>

            <HBox alignment="CENTER" style="-fx-padding: 15;">
                <Button alignment="BASELINE_LEFT" onAction="#logout"
                        style="-fx-background-color: white; -fx-text-fill: #E53935; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 16;"
                        text="ðŸšª Logout"/>
            </HBox>
        </VBox>
    </left>

</BorderPane>