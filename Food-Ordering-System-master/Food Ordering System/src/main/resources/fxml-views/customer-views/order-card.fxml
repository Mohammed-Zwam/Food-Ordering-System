<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10"
      style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 5, 0, 0, 2); -fx-padding: 15;"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pattern.food_ordering_system.controller.customer.OrderCardController">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="lblStatus" text="Delivered"
               style="-fx-background-color: #F0F0F0; -fx-text-fill: #555; -fx-padding: 3 8; -fx-background-radius: 4; -fx-font-size: 11;"/>
        <Label fx:id="lblDate" text="Dec 04 â€¢ 11:47am"
               style="-fx-text-fill: #778DA9; -fx-font-size: 12;"/>
    </HBox>

    <Separator style="-fx-background-color: #F4F8FF;"/>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <VBox style="-fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-padding: 2;">
            <ImageView fx:id="imgRestaurant" fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../assets/icon.png"/>
                </image>
            </ImageView>
        </VBox>

        <VBox spacing="3">
            <Label fx:id="lblRestaurantName" text="Koshary Sayed Hanafy"
                   style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #0D1B2A;"/>
            <Label fx:id="lblOrderId" text="Order ID: #12345"
                   style="-fx-text-fill: #90A4AE; -fx-font-size: 11;"/>
            <Label fx:id="lblItemsCount" text="2 items"
                   style="-fx-text-fill: #415A77; -fx-font-size: 12;"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 0 0 0;">
        <VBox>
            <Label text="Total Amount" style="-fx-font-size: 10; -fx-text-fill: #778DA9;"/>
            <Label fx:id="lblTotal" text="EGP 103.98"
                   style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #0D1B2A;"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="Order again" onAction="#onReorder"
                style="-fx-background-color: white; -fx-border-color: #1E88E5; -fx-border-radius: 20; -fx-background-radius: 20; -fx-text-fill: #1E88E5; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 20;"/>
    </HBox>

</VBox>