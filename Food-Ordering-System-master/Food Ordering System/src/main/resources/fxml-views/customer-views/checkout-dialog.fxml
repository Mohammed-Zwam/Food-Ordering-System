<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<VBox spacing="20"
      style="-fx-background-color: #FFFFFF; -fx-background-radius: 15; -fx-padding: 25; -fx-border-color: #D0D8E8; -fx-border-radius: 15; -fx-border-width: 1;"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pattern.food_ordering_system.controller.customer.CheckoutDialogController"
      prefWidth="400">

    <VBox spacing="5">
        <Label text="Checkout"
               style="-fx-font-family: 'Pacifico', 'Segoe UI', sans-serif; -fx-font-size: 24; -fx-text-fill: #1E88E5;"/>
        <Label text="Complete your order details"
               style="-fx-font-size: 12; -fx-text-fill: #778DA9;"/>
        <Separator style="-fx-background-color: #E9EEF6;"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT"
          style="-fx-background-color: #F4F8FF; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #E9EEF6; -fx-border-radius: 8;">
        <VBox spacing="2">
            <Label text="Total Amount" style="-fx-font-size: 12; -fx-text-fill: #415A77;"/>
            <Label fx:id="lblOrderSummary" text="150.00 EGP"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1E88E5;"/>
        </VBox>
    </HBox>

    <VBox spacing="15">
        <VBox spacing="5">
            <Label text="Delivery Address" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #0D1B2A;"/>
            <TextField fx:id="txtDeliveryAddress" promptText="e.g. 123 Street, Cairo"
                       style="-fx-background-color: #FFFFFF; -fx-border-color: #D0D8E8; -fx-border-radius: 5; -fx-padding: 10; -fx-text-fill: #0D1B2A; -fx-prompt-text-fill: #90A4AE;"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Payment Method" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #0D1B2A;"/>
            <ComboBox fx:id="cmbPaymentMethod" promptText="Select Method" maxWidth="Infinity"
                      style="-fx-background-color: #FFFFFF; -fx-border-color: #D0D8E8; -fx-border-radius: 5; -fx-padding: 5; -fx-font-size: 13;"/>
        </VBox>
    </VBox>

    <HBox spacing="12" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel" onAction="#onCancel"
                style="-fx-background-color: transparent; -fx-border-color: #90A4AE; -fx-border-radius: 5; -fx-text-fill: #415A77; -fx-padding: 8 20; -fx-cursor: hand;"/>

        <Button text="Confirm Order" onAction="#onCheckout"
                style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(30, 136, 229, 0.3), 5, 0, 0, 2);"/>
    </HBox>

</VBox>