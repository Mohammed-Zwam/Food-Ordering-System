<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<VBox alignment="TOP_CENTER" maxHeight="320" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="250.0" spacing="0.0" style=" -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #DBDBDB; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pattern.food_ordering_system.controller.restaurant.FoodCardController">
    <children>
        <ImageView fx:id="imgFood" fitHeight="130.0" fitWidth="250.0"  preserveRatio="true" pickOnBounds="true">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </ImageView>

        <VBox alignment="TOP_LEFT" spacing="8.0" VBox.vgrow="ALWAYS">
            <children>
                <Label fx:id="lblName" maxWidth="190.0" style="-fx-font-weight: bold; -fx-font-size: 15px; -fx-text-fill: #1a1a1a;" text="Cheese Burger" wrapText="true" />

                <Text fx:id="txtDescription"  wrappingWidth="200" style="-fx-text-fill: #666666; -fx-font-size: 12px;" text="Burgers" />

                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <children>
                        <Label fx:id="lblPrice" style="-fx-text-fill: #1E88E5; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-color: #DEE9FA; -fx-border-radius: 50%; -fx-border-color: #D0DAF7; -fx-background-radius: 15; -fx-padding: 5 10;" text="\$ 5.00" />
                        <Label fx:id="lblStatus" style="-fx-text-fill: #2E7D32; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-color: #E8F5E9; -fx-border-color: #B3FCC0; -fx-border-radius: 50%; -fx-background-radius: 15; -fx-padding: 5 10;" text="Available" />
                    </children>
                    <VBox.margin>
                        <Insets top="2.0" />
                    </VBox.margin>
                </HBox>

                <Region minHeight="10.0" VBox.vgrow="ALWAYS" />

                <HBox alignment="CENTER" spacing="8.0">
                    <children>
                        <Button onAction="#handleEdit" maxWidth="Infinity" mnemonicParsing="false"
                                style="-fx-background-color: #1E88E5;
                                       -fx-text-fill: white;
                                       -fx-background-radius: 8;
                                       -fx-font-weight: bold;
                                       -fx-font-size: 14px;
                                       -fx-cursor: hand;
                                       -fx-padding: 5 0;
                                       -fx-effect: dropshadow(three-pass-box, #E9EEF6, 4, 0, 0, 2);"
                                text="Edit"
                                HBox.hgrow="ALWAYS">
                        </Button>

                        <Button onAction="#handleDelete" maxWidth="Infinity" mnemonicParsing="false"
                                style="-fx-background-color: linear-gradient(to bottom, #E53935 0%, #D32F2F 100%);
                                       -fx-text-fill: white;
                                       -fx-background-radius: 8;
                                       -fx-font-weight: bold;
                                       -fx-font-size: 14px;
                                       -fx-cursor: hand;
                                       -fx-padding: 5 0;
                                       -fx-effect: dropshadow(three-pass-box, rgba(229,57,53,0.4), 4, 0, 0, 2);"
                                text="Delete"
                                HBox.hgrow="ALWAYS">
                        </Button>
                    </children>
                </HBox>

            </children>
            <padding>
                <Insets bottom="12.0" left="15.0" right="15.0" top="0.0" />
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="0.0" top="10.0" />
    </padding>
</VBox>